@model DateTime
@{
	ViewData["Title"] = "Index";

	String time = Model.ToShortTimeString();
	String dateToday = Model.ToString("D");
	DateTime testTime = new DateTime(2020, 2, 15, 21, 0, 0);
	DateTime endTime = new DateTime(2019, 1, 1, 12, 0, 0);
	int hour = Model.Hour;
	int year = Model.Year;
	int days = Model.DayOfYear;
	int daysInYear;
	int difference;
	String greeting;

	if (hour < 12)
	{
		greeting = "Good Morning!";
	}
	else if (hour >= 12 && hour < 18)
	{
		greeting = "Good Afternoon!";
	}
	else
	{
		greeting = "Good Evening!";
	}

	if (DateTime.IsLeapYear(year))
	{
		daysInYear = 366;
		difference = daysInYear - days;
	} else {
		daysInYear = 365;
		difference = daysInYear - days;
	}
}
<head>
	<link rel="stylesheet" href="site.css">
</head>

<body>
	<h1>@greeting</h1>

	<h3>It is @time  on @dateToday</h3>
	<h4>There are @difference days left in @year</h4>
	<a href="/Lab4/Page2" role="button" class="btn btn-success btn-lg" style="color: white">Go to Page 2</a>
</body>