
@{
	ViewData["Title"] = "Page2";
}
<head><link rel="stylesheet" href="site.css"></head>
<h1>Page2 - Random Data!</h1>
<div>
	<a href="/Lab4/Page2/1" class="btn btn-info">1</a>
	<a href="/Lab4/Page2/2" class="btn btn-info">2</a>
	<a href="/Lab4/Page2/3" class="btn btn-info">3</a>
	<a href="/Lab4/Page2/4" class="btn btn-info">4</a>
	<a href="/Lab4/Page2/5" class="btn btn-info">5</a>
</div>
@if (Model != 0)
{
	for (int i = 0; i < Model; i++)
	{
		<div style="border: solid; border-color: lightgray; margin-bottom: 10px; margin-top: 5px">
			<h2 style="background-color: lightgray; height: 75px; padding-top: 20px; padding-left: 15px; margin:0">Profile @(i + 1)</h2>
			<p><strong>Name: </strong>@(LoremNET.Lorem.Words(1) + " " + LoremNET.Lorem.Words(1))</p>
			<p><strong>Email: </strong>@((LoremNET.Lorem.Words(1) + "@" + LoremNET.Lorem.Words(1) + ".com").ToLower())</p>
			<p><strong>Bio: </strong>@(LoremNET.Lorem.Paragraph(5, 6, 10, 20))</p>
		</div>
	}
}
else
{
	for (int i = 0; i < 4; i++)
	{
		<div style="border: solid; border-color: lightgray; margin-bottom: 10px; margin-top: 5px">
			<h2 style="background-color: lightgray; height: 75px; padding-top: 20px; padding-left: 15px; margin: 0">Profile @(i + 1)</h2>
			<p><strong>Name: </strong>@(LoremNET.Lorem.Words(1) + " " + LoremNET.Lorem.Words(1))</p>
			<p><strong>Email: </strong>@((LoremNET.Lorem.Words(1) + "@" + LoremNET.Lorem.Words(1) + ".com").ToLower())</p>
			<p><strong>Bio: </strong>@(LoremNET.Lorem.Paragraph(5, 6, 10, 20))</p>
		</div>
	}
}
<a href="/Lab4/Page3" role="button" class="btn btn-success btn-lg" style="color: white">Go to Page 3</a>